//This is where ppl click buttons and it inputs stuff

import java.awt.*;
import javax.swing.*;
import java.awt.event.*;

public class Quiz_Interface extends JFrame implements Actionlistener{
    
    JPanel question_prompt = new JPanel();
    private JTextField quizid;
    private JTextField question;
    JPanel choices_promt = new JPanel();
    private JToggleButton choice1;
    private JToggleButton choice2;
    private JToggleButton choice3;
    private JToggleButton choice4;
    private JToggleButton choice5;
    private JButton proceed;
    public int questionno;
    public int maxquestionno;
    //choices per question
    private int choices = 0;
    //These are the respective points for each music genre
    private int musicgenre1;
    private int musicgenre2;
    private int musicgenre3;
    
    
    public Quiz_Interface(){
        super("Which music genre suits you quiz");

        JTextField quizid = new JTextField("What Music Genre Best Suits You?");
        question_prompt.add(quizid);
        JTextField question = new JTextField("What is your name?");
        question_prompt.add(question);

        JToggleButton choice1  = new JToggleButton();
        choice1.setSize(100, 100);
        choice1.setVisible(false);
        choices_promt.add(choice1);
        JToggleButton choice2  = new JToggleButton();
        choice2.setSize(100, 100);
        choice2.setVisible(false);
        choices_promt.add(choice2);
        JToggleButton choice3  = new JToggleButton();
        choice3.setSize(100, 100);
        choice3.setVisible(false);
        choices_promt.add(choice3);
        JToggleButton choice4  = new JToggleButton();
        choice4.setSize(100, 100);
        choice4.setVisible(false);
        choices_promt.add(choice4);
        JToggleButton choice5  = new JToggleButton();
        choice5.setSize(100, 100);
        choice5.setVisible(false);
        choices_promt.add(choice5);

        if(choices = 0){
            choice1.setVisible(false);
            choice2.setVisible(false);
            choice3.setVisible(false);
            choice4.setVisible(false);
            choice5.setVisible(false);
        }
        else if(choices = 1){
            choice1.setVisible(true);
            choice2.setVisible(false);
            choice3.setVisible(false);
            choice4.setVisible(false);
            choice5.setVisible(false);
        }
        else if(choices = 2){
            choice1.setVisible(true);
            choice2.setVisible(true);
            choice3.setVisible(false);
            choice4.setVisible(false);
            choice5.setVisible(false);
        }
        else if(choices = 3){
            choice1.setVisible(true);
            choice2.setVisible(true);
            choice3.setVisible(true);
            choice4.setVisible(false);
            choice5.setVisible(false);
        }
        else if(choices = 4){
            choice1.setVisible(true);
            choice2.setVisible(true);
            choice3.setVisible(true);
            choice4.setVisible(true);
            choice5.setVisible(false);
        }
        else if(choices = 5){
            choice1.setVisible(true);
            choice2.setVisible(true);
            choice3.setVisible(true);
            choice4.setVisible(true);
            choice5.setVisible(true);
        }

        JButton proceed = new JButton("Start Quiz");
        proceed.setSize(200, 100);

    }

    public void actionPerformed(ActionEvent e){


        

    }

    public static void main(String args[]){

        Quiz_Interface frame = new Quiz_Interface();
        frame.setLayout(new GridLayout(1, 2));
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(430,300);
        frame.setLocation(300,300);
        frame.setVisible(true);
        frame.getContentPane().setBackground(Color.gray); 
        frame.setResizable(false);

    }
}
